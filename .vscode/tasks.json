{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start weeb server",
            "type": "shell",
            "command": "python3 -m http.server"
        },
        {
            "label": "css watch",
            "type": "shell",
            "command": "pnpx @tailwindcss/cli -i ./assets/css/input.css -o ./assets/css/output_v1.1.css --watch"
        },
        {
            "label": "transpile ts",
            "type": "shell",
            "command": "./node_modules/.bin/tsc"
        }
    ]
}