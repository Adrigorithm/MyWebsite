// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
[
  {
    "label": "Open browser",
    "command": "firefox",
    "args": ["localhost:8000"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "always",
    "shell": "system",
    "show_summary": true,
    "show_command": true,
  },
  {
    "label": "Web server",
    "command": "python",
    "args": ["-m", "http.server", "8000"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "never",
    "shell": "system",
    "show_summary": true,
    "show_command": true,
  },
  {
    "label": "Build CSS",
    "command": "npx",
    "args": [
      "@tailwindcss/cli",
      "-i",
      "./input.css",
      "-o",
      "./style.css",
      "--watch",
    ],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "never",
    "shell": "system",
    "show_summary": true,
    "show_command": true,
  },
  {
    "label": "Publish",
    "command": "zip",
    "args": [
      "-r",
      "archive.zip",
      "android-chrome-*",
      "apple-touch-icon.png",
      "favicon*",
      "images/",
      "index.html",
      "inter_var.woff2",
      "scripts/",
      "site.webmanifest",
      "style.css",
      "videos/",
    ],
    "allow_concurrent_runs": false,
    "reveal": "never",
    "hide": "on_success",
    "shell": "system",
    "show_summary": false,
    "show_command": false,
  },
]
